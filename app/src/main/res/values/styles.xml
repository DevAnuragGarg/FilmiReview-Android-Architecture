<resources>

    <!-- we use MaterialComponent theme now which is API 21+ and AppCompat theme is
     for pre lollipop devices. So from now on we use MaterialComponent-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <!--
        <item name="android:textSize">@dimen/size_16</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/rating_yellow</item>
    </style>

    <style name="ExpandedTitleText" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedTitleText" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
